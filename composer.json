{
    "name": "julien-boudry/enigma-machine",
    "description": "Enigma cipher machine was invented by a German engineer. This PHP package simulates its operation.",
    "license": "MIT",
    "type": "library",
    "bin": ["bin/enigma"],
    "require": {
        "php": "^8.4",
        "symfony/console": "^7.4|^8.0"
    },
    "require-dev": {
        "league/commonmark": "^2.7",
        "pestphp/pest": "^4.1",
        "phpstan/phpstan": "^2.1",
        "julien-boudry/php-reference": ">0.1",
        "friendsofphp/php-cs-fixer": "^3.91"
    },
    "autoload": {
        "psr-4": {
            "JulienBoudry\\EnigmaMachine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "lint": "php-cs-fixer fix",
        "analyse": "phpstan analyse"
    },
    "scripts-descriptions": {
        "test": "Run all tests!",
        "analyse": "Run PHPStan static analysis"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
